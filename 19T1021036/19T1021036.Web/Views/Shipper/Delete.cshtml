@model _19T1021036.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa thông tin người giao hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Phone:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="glyphicon glyphicon-trash"></i>
                    Xóa dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-warning">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

