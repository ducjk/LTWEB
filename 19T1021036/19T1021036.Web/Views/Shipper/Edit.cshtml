@model _19T1021036.DomainModels.Shipper
@{
}


<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="ShipperID" value="@Model.ShipperID"/>

            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" autofocus value="@Model.ShipperName" name="ShipperName">
            </div>

            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="text" class="form-control" value="@Model.Phone" name="Phone">
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-warning">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
