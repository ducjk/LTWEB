@model _19T1021036.DomainModels.Shipper
@{
}


<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)

            <div class="form-group">
                <label>Tên người giao hàng:</label>
                @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class="form-control" })
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-warning">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
