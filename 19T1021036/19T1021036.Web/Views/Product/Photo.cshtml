@model _19T1021036.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PhotoID)

            @Html.HiddenFor(m => m.ProductID)

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh</label>
                <div class="col-sm-10">
                    <input type="file"
                           class="form-control"
                           name="uploadphoto" accept="image/*"
                           id="inputImg" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <div class="preview-avatar" style="width:200px; height:200px;">
                        <img id="Photo" src="~/@Model.Photo" style="width:100%; height:100%; object-fit:cover;border-radius:6px;" />
                    </div>

                    @Html.HiddenFor(m => m.Photo);
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    @*<label><input type="checkbox" name="IsHidden" >Ẩn ảnh (không hiển thị với khách hàng)</label>*@
                    <label>@Html.CheckBoxFor(m => m.IsHidden, new { })Ẩn ảnh (không hiển thị với khách hàng)</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

<script>
    const inputImg = document.querySelector("#inputImg")
    const imgPreview = document.querySelector("#Photo")

    inputImg.onchange = (e) => {
        const file = e.target.files[0]
        imgPreview.src = URL.createObjectURL(file)
    }

</script>