@model _19T1021036.DomainModels.Product
@{
    ViewBag.Title = "Bổ sung mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Create" method="post" enctype="multipart/form-data">
            

            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ProductName" autofocus>
                    @Html.ValidationMessageFor(m => m.ProductName, "", new { @style = "color:#f00;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select name="CategoryID" style="outline: none;" class="form-control">
                        @foreach (var item in SelectListHepler.Categories())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.CategoryID, "", new { @style = "color:#f00;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select name="SupplierID" style="outline: none;" class="form-control">
                        @foreach (var item in SelectListHepler.Suppliers())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.SupplierID, "", new { @style = "color:#f00;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Unit">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="number" min="0" class="form-control" name="Price" value="0">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh</label>
                <div class="col-sm-10">
                    <input type="file"
                           class="form-control"
                           name="uploadphoto" accept="image/*"
                           id="inputImg" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <div class="preview-avatar" style="width:200px; height:200px;">
                        <img id="Photo" src="~/Images/Products/defaultPhoto.gif" style="width:100%; height:100%; object-fit:cover;border-radius:6px;" />
                    </div>
                </div>
            </div>

            @*<div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ValidationSummary("", new { @style = "color:#f00" })
            </div>
            </div>*@

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>


<script>
    const inputImg = document.querySelector("#inputImg")
    const imgPreview = document.querySelector("#Photo")

    inputImg.onchange = (e) => {
        const file = e.target.files[0]
        imgPreview.src = URL.createObjectURL(file)
    }

</script>