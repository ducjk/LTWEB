@model _19T1021036.DomainModels.Category
@{
    
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)

            <div class="form-group">
                <label >Tên loại hàng:</label>
                @Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", @autofocus="autofocus" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                @Html.TextBoxFor(m => m.Description, new { @class="form-control"})
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-warning">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>