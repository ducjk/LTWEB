
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <p class="form-control-static">Beverages</p>
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <p class="form-control-static">Soft drinks, coffees, teas, beers, and ales</p>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="glyphicon glyphicon-trash"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-warning">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>