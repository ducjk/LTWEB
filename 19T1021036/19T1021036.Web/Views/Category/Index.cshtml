
@{
    ViewBag.Title = "Quản lý loại hàng";
}


<div class="box box-primary">
    <div class="box-body">
        @*Form tìm kiếm*@
        <form>
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>Tìm kiếm
                    </button>
                    <a href="~/Category/Create" style="margin-left: 6px;" class="btn btn-primary">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>


            </div>
        </form>
        @*Kết quả tìm kiếm*@
        <p>
            Có <strong>20</strong> loại hàng trong tổng số <strong>5</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên loại hàng</th>
                        <th>Mô tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>Beverages</td>
                            <td>Soft drinks, coffees, teas, beers, and ales</td>
                            
                            <td>
                                <a href="~/Category/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit">
                                    </i>
                                </a>
                                <a href="~/Category/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash">
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>