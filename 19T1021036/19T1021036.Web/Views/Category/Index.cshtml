@model IEnumerable<_19T1021036.DomainModels.Category>
@{
    ViewBag.Title = "Quản lý loại hàng";
}


<div class="box box-primary">
    <div class="box-body">
        @*Form tìm kiếm*@
        <form action="~/Category">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search" autofocus value="@ViewBag.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>Tìm kiếm
                    </button>
                    <a href="~/Category/Create" style="margin-left: 6px;" class="btn btn-primary">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>


            </div>
        </form>
        @*Kết quả tìm kiếm*@
        <p>
            Có <strong>@ViewBag.RowCount</strong> loại hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên loại hàng</th>
                        <th>Mô tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            
                            <td>
                                <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit">
                                    </i>
                                </a>
                                <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash">
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Category?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>